{
  "manifest_version": 3,
  "name": "Gmail Reply Webhook (Sidebar)",
  "version": "0.2.0",
  "description": "Panel boczny w Gmailu: wysyła treść maila do webhooka i pozwala wysłać/edytować odpowiedź.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ]
}